{
  "manifest_version": 2,
  "name": "Obsidian Quick Link",
  "version": "1.0",
  "description": "Creates an Obsidian Avanced URI link from the current page",
  "applications": {
    "gecko": {
      "id": "noble.luck0938@fastmail.com"
    }
  },
  "permissions": ["activeTab", "storage"],
  "icons": {
    "48": "icons/obsidian.svg",
    "96": "icons/obsidian.svg"
  },

  "browser_action": {
    "default_title": "Link to Obsidian Advanced URI"
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["background.js"]
  }
}
